{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./src/@types/**/*"],
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
